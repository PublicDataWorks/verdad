{
    "type": "object",
    "required": ["flagged_snippets"],
    "properties": {
        "flagged_snippets": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "start_time",
                    "length",
                    "brief_description",
                    "disinformation_categories",
                    "keywords_detected"
                ],
                "properties": {
                    "start_time": {
                        "type": "integer",
                        "description": "The number of seconds from the start of the audio clip to the start of the snippet."
                    },
                    "length": {
                        "type": "integer",
                        "description": "The length of the snippet in seconds."
                    },
                    "brief_description": {
                        "type": "string",
                        "description": "Concise description of the snippet."
                    },
                    "disinformation_categories": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "keywords_detected": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    }
}
